{
    "preloader": {
        "name": "preloader",
        "background": ["#COLOR", "greyscale", "grey-1"],
        "z-index": 99,
        "transition": ["#CORE", "transition"],
        "visible-at": ["#BREAKPOINT", "break-2"],
        "spinner": {
            "background-color": "transparent",
            "border": "8px solid",
            "border-radius": "50%",
            "border-color": ["#COLOR", "brand", "brand-1"],
            "border-top-color": "rgba(black, 0.2)",
            "border-right-color": "rgba(black, 0.2)",
            "width": "2.5em",
            "height": "2.5em"
        },
        "close": {
            "bottom": "4rem"
        }
    }
}