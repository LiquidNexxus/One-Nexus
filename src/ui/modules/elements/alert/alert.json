{
    "alert": {
        "name": "alert",
        "methods": ["dismiss"],
        "alerts": {
            "error": {
                "color": ["#COLOR", "alert", "error"],
                "icon": "times"
            },
            "success": {
                "color": ["#COLOR", "alert", "success"],
                "icon": "check"
            },
            "info": {
                "color": ["#COLOR", "alert", "info"],
                "icon": "info-circle"
            },
            "help": {
                "color": ["#COLOR", "alert", "help"],
                "icon": "question-circle"
            }
        },
        "text-color": ["#COLOR", "greyscale", "white"],
        "icon": {
            "enable-by-default": true
        },
        "-bar": {
            "padding": "0.85em"
        },
        "-box": {
            "padding": "1.5em"
        }
    }
}