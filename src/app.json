{
    "app": {
        "views": {
            "navigation": {
                "items": [
                    ["link 1", "/"],
                    ["link 2", [
                        ["link 2 child", "/"],
                        ["link 2 child 2", "/"],
                        ["link 2 child 3", [
                            ["link 2 grandchild", "/"],
                            ["link 2 grandchild 2", "/"]
                        ]]
                    ]],
                    ["link 3", "/"]
                ]
            },
            "logo": {
                "src": "assets/images/logo-light.png"
            }
        },
        "ui": {
            "component-glue": "_",
            "modifier-glue": "-",
            "sass-config-parser": "eval-config",
            "theme": "one_nexus",
            "css-class-props": ["object"],
            "modules": {
                "fizz": ["#COLOR", "brand", "brand-1"],
                "accordion": {
                    "fizz": "foo"
                },
                "alert": {
                    "icon": {
                        "default-enable": true
                    }
                },
                "button": {
                    "palettes": [
                        "brand", "greyscale", "alert", "social", 
                        {"foo": "blue", "bar": "#FF5733"}
                    ],
                    "combine": {
                        "primary" : ["round", "size-4", "brand-1"],
                        "social"  : ["icon", "oval", "size-6", "brand-2"]
                    }
                },
                "colors": {
                    "brand": {
                        "brand-1": "blue"
                    }
                },
                "carousel": {
                    "navigationItem": {
                        "disable": false
                    }
                },
                "modal": {
                    "buzz": true,
                    "top-position": "30%"
                }
            }
        }
    }
}